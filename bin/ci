#!/bin/bash

# CI Pipeline Script for TechHub Battles
# This script runs all necessary checks and tests locally

set -e  # Exit on any error

echo "ðŸš€ Starting CI Pipeline for TechHub Battles..."
echo "=================================================="

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    print_error "package.json not found. Please run this script from the project root."
    exit 1
fi

print_status "Installing dependencies..."
if command_exists npm; then
    npm ci >/dev/null 2>&1
elif command_exists yarn; then
    yarn install --frozen-lockfile >/dev/null 2>&1
elif command_exists pnpm; then
    pnpm install --frozen-lockfile >/dev/null 2>&1
else
    print_error "No package manager found (npm, yarn, or pnpm)"
    exit 1
fi
print_success "Dependencies installed"

echo ""
print_status "Running type checking..."
npm run type-check >/dev/null 2>&1
print_success "Type checking passed"

echo ""
print_status "Running ESLint with auto-fix..."
npm run lint -- --fix >/dev/null 2>&1
print_success "ESLint auto-fix completed"

echo ""
print_status "Running ESLint check..."
npm run lint >/dev/null 2>&1
print_success "Linting passed"

# Check if Prettier is available, if not add it
if ! command_exists prettier && ! npm list prettier >/dev/null 2>&1; then
    print_warning "Prettier not found. Installing..."
    npm install --save-dev prettier >/dev/null 2>&1
    echo "{
  \"semi\": true,
  \"trailingComma\": \"es5\",
  \"singleQuote\": true,
  \"printWidth\": 80,
  \"tabWidth\": 2,
  \"useTabs\": false
}" > .prettierrc
    echo "node_modules/
.next/
coverage/
dist/
build/
*.log
.env*" > .prettierignore
fi

echo ""
print_status "Auto-fixing code formatting with Prettier..."
if [ -f ".prettierrc" ] || command_exists prettier; then
    if command_exists prettier; then
        prettier --write . >/dev/null 2>&1
    else
        npx prettier --write . >/dev/null 2>&1
    fi
    print_success "Code formatting auto-fixed"
else
    print_warning "Prettier not configured, skipping format fix"
fi

echo ""
print_status "Running Prettier format check..."
if [ -f ".prettierrc" ] || command_exists prettier; then
    if command_exists prettier; then
        prettier --check . >/dev/null 2>&1
    else
        npx prettier --check . >/dev/null 2>&1
    fi
    print_success "Code formatting check passed"
else
    print_warning "Prettier not configured, skipping format check"
fi

echo ""
print_status "Running tests..."
npm run test >/dev/null 2>&1
print_success "All tests passed"

echo ""
print_status "Running tests with coverage..."
npm run test:coverage >/dev/null 2>&1
print_success "Coverage report generated"

echo ""
print_status "Building the application..."
npm run build >/dev/null 2>&1
print_success "Build completed successfully"

echo ""
print_status "Checking for security vulnerabilities..."
if command_exists npm; then
    npm audit --audit-level moderate >/dev/null 2>&1
elif command_exists yarn; then
    yarn audit --level moderate >/dev/null 2>&1
elif command_exists pnpm; then
    pnpm audit --audit-level moderate >/dev/null 2>&1
fi
print_success "Security audit completed"

echo ""
echo "=================================================="
print_success "ðŸŽ‰ CI Pipeline completed successfully!"
echo "=================================================="

# Print summary
echo ""
echo "Summary of checks performed:"
echo "âœ… Dependencies installed"
echo "âœ… Type checking completed"
echo "âœ… ESLint auto-fix applied"
echo "âœ… ESLint passed"
echo "âœ… Prettier formatting auto-fixed"
echo "âœ… Prettier formatting check passed"
echo "âœ… All tests passed"
echo "âœ… Coverage report generated"
echo "âœ… Build completed"
echo "âœ… Security audit completed"
